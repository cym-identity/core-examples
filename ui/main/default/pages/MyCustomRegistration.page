<apex:page id="communitiesSelfRegPage" showHeader="false" controller="MyCommunitiesSelfRegController" title="{!$Label.site.user_registration}"
  applyBodyTag="false" applyHtmlTag="false" docType="html-5.0">

  <html>

  <head>
    <title>Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <apex:slds />
    <apex:includeLightning />
    <style>
      html,
      body,
      body>div.slds-grid,
      body>div#container {
        height: 100%;
        min-height: 100%;
        background-color: #FAFAFA
      }

      #auraErrorMessage {
        display: none;
      }
    </style>
  </head>

  <body class="slds-scope">
    <div class="slds-grid slds-grid_vertical-align-center slds-grid_align-center">
      <div class="slds-col slds-size_1-of-1" id="container" style="margin: auto; max-width: 400px;"></div>
    </div>

    <script type="text/javascript">
      try {
        $Lightning.use("c:loginApp", function () {
          $Lightning.createComponent("c:userRegister",
            {
              email: "{!email}"
            },
            "container",
            function (cmp, status) { document.getElementById('loading').style.display = 'none'; }
          );
        });
      } catch (e) {
        console.error(e);
      }
    </script>
  </body>

  </html>

</apex:page>